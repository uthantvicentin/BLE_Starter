    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".layouts.ScreenLoginActivity" >

    <ImageView
        android:id="@+id/icon_logo"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_280sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/logo_keep_distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/buttonContinue"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_46sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        app:srcCompat="@drawable/button_continue"
        android:tint="@color/colorGreenLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonContinue"
        android:layout_alignEnd="@+id/buttonContinue"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/khula_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/continuar"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonContinue"
        app:layout_constraintEnd_toEndOf="@+id/buttonContinue"
        app:layout_constraintStart_toStartOf="@+id/buttonContinue"
        app:layout_constraintTop_toTopOf="@+id/buttonContinue"
        />

    <TextView
        android:id="@+id/text_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/rasa_bold"
        android:includeFontPadding="false"
        android:text="@string/termos_servico"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toTopOf="@+id/buttonContinue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_logo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
